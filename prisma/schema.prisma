generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  AUTHOR
  ADMIN
  PREMIUM
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String // ÅifrelenmiÅŸ (hashed) halini tutacaÄŸÄ±z
  name     String?
  role     Role      @default(USER) // VarsayÄ±lan rol USER
  posts    Post[] // Bir kullanÄ±cÄ±nÄ±n birden fazla yazÄ±sÄ± olabilir
  comments Comment[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  slug      String   @unique // URL'de id yerine gÃ¶rÃ¼necek kÄ±sÄ±m
  image     String? // ğŸ”¥ Yeni ekledik: Resmin sunucudaki yolu (opsiyonel)
  createdAt DateTime @default(now())
  tags      Tag[]

  author   User?     @relation(fields: [authorId], references: [id])
  authorId Int?
  comments Comment[]
}

model Tag {
  id    Int    @id @default(autoincrement())
  slug  String @unique // ğŸ”¥ Benzersizlik ve arama iÃ§in (nestjs)
  name  String @unique // ğŸ”¥ GÃ¶rÃ¼ntÃ¼leme iÃ§in (NestJS)
  posts Post[] // many to many (Ã‡okÃ§a Ã§ok iliÅŸkisi)
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String // Yorumun iÃ§eriÄŸi
  createdAt DateTime @default(now()) // Yorumun oluÅŸturulma zamanÄ±
  updatedAt DateTime @updatedAt // Yorumun gÃ¼ncellenme zamanÄ±

  // ğŸ”— Ä°LÄ°ÅKÄ°LER
  // Yorumu yapan kullanÄ±cÄ± ile baÄŸlantÄ±
  author   User @relation(fields: [authorId], references: [id])
  authorId Int

  // Yorumun yapÄ±ldÄ±ÄŸÄ± yazÄ± ile baÄŸlantÄ±
