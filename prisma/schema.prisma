generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  AUTHOR
  ADMIN
  PREMIUM
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String // Şifrelenmiş hali / Hashed password
  name      String?
  role      Role      @default(USER) // Varsayılan rol / Default role
  posts     Post[] // Kullanıcının yazıları / User's posts
  comments  Comment[]
  deletedAt DateTime? // Soft delete alanı / Soft delete field
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  slug      String   @unique // SEO-uyumlu URL / SEO-friendly URL
  image     String? // S3 resim URL'si / S3 image URL (optional)
  createdAt DateTime @default(now())
  tags      Tag[]

  author    User?     @relation(fields: [authorId], references: [id])
  authorId  Int?
  comments  Comment[]
  deletedAt DateTime? // Soft delete alanı / Soft delete field

  @@index([title, content]) // Tam metin arama indeksi / Full-text search index
}

model Tag {
  id    Int    @id @default(autoincrement())
  slug  String @unique // Benzersiz arama anahtarı / Unique search key (nestjs)
  name  String @unique // Görüntüleme adı / Display name (NestJS)
  posts Post[] // Çoka-çok ilişki / Many-to-many relation
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String // Yorum içeriği / Comment content
  createdAt DateTime  @default(now()) // Oluşturulma zamanı / Created at
  updatedAt DateTime  @updatedAt // Güncellenme zamanı / Updated at
  deletedAt DateTime? // Soft delete alanı / Soft delete field

  // İlişkiler / Relations
  // Yorum sahibi / Comment author
  author   User @relation(fields: [authorId], references: [id])
  authorId Int

  // Yorumun ait olduğu yazı / Post this comment belongs to
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int
}
